/* pages/waybillList/waybillList.wxss */

page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}

.top-bar-view{
	background-color:#17BEBB;
	height:192rpx;
}
.search-view{
	padding: 4px 16px 0 16px;
}
.search-box{
	width:100%;
	height:72rpx;
	background-color:#fff;
	border-radius:50rpx;
	padding:12rpx 0;
	box-sizing:border-box;
}
.traggle-pick{
	width:200rpx;
	height:48rpx;
	padding-left:30rpx;
	box-sizing:border-box;
	border-right:1rpx solid #ABB1B1;
}
.filed-picker{
	width: 150rpx;
	line-height:48rpx;
	font-size:28rpx;
	color:#666666;

}
.traggle-down{
	width:20rpx;
	height:20rpx;
}
.traggle-down image{
	width:20rpx;
	height:20rpx;
}

.search-input-view{
	width:450rpx;
	padding:0 15rpx;
}
.search-input-view input{
	width:450rpx;
	height:48rpx;
	line-height:48rpx;
	font-size:28rpx;
}
.top-bar{
	width:100%;
	height:80rpx;
	padding-top:32rpx;
}
.top-bar-item{
	width:150rpx;
	height:80rpx;
	text-align:center;
	font-size:30rpx;
	color:#fff;
}
.top-bar-item text{
	line-height:80rpx;
	color:#D0F2F1;
}
.choosed-bar{
	display:inline-block;
	height:77rpx;
	font-weight:500;
	color:#ffffff;
	border-bottom:4rpx solid #fff;
}



.waybill-list{
	width:100%;
	padding:40rpx;
	background-color:#f5f5f5;
	box-sizing:border-box;
}

.waybill-item{
	width:100%;
	height: 484rpx;
	background-color:#fff;
}